<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    //FYI

        <TextView
            android:id="@+id/textView"
            android:layout_width="165dp"
            android:layout_height="57dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Battery    (%)  :"
            android:textAlignment="gravity"
            android:textColor="#009688"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Soil Sensor 1 :"
            android:textAlignment="gravity"
            android:textColor="#4CAF50"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.102" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="64dp"
            android:gravity="center"
            android:text="Soil Sensor 2 :"
            android:textAlignment="gravity"
            android:textColor="#4CAF50"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="68dp"
            android:gravity="center"
            android:text="Soil Sensor 3 :"
            android:textAlignment="gravity"
            android:textColor="#4CAF50"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="68dp"
            android:gravity="center"
            android:text="Soil Sensor 4 :"
            android:textAlignment="gravity"
            android:textColor="#4CAF50"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="72dp"
            android:gravity="center"
            android:text="Pump              :"
            android:textAlignment="gravity"
            android:textColor="#E83326"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="72dp"
            android:gravity="center"
            android:text="System           :"
            android:textAlignment="gravity"
            android:textColor="#009688"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <TextView
            android:id="@+id/batview"
            android:layout_width="73dp"
            android:layout_height="46dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:hint=""
            android:textAlignment="center"
            android:textColor="#292B28"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.368"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/senview1"
            android:layout_width="73dp"
            android:layout_height="46dp"
            android:layout_marginTop="68dp"
            android:gravity="center"
            android:hint=""
            android:textAlignment="center"
            android:textColor="#292B28"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.368"
            app:layout_constraintStart_toEndOf="@+id/textView1"
            app:layout_constraintTop_toTopOf="@id/batview"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/senview2"
            android:layout_width="73dp"
            android:layout_height="46dp"
            android:layout_marginTop="64dp"
